# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=newsapp
DB_USER=postgres
DB_PASSWORD=password

# Migration Configuration
# USE_MIGRATIONS=true (default) - Use migration-based schema management (recommended)
# USE_MIGRATIONS=false - Use sequelize.sync() for development only (not recommended)
USE_MIGRATIONS=true

# JWT Secret
JWT_SECRET=your-secret-key-change-this-in-production

# Server Configuration
PORT=3000
NODE_ENV=development

# Test Database (optional - defaults to in-memory SQLite)
# TEST_DB_STORAGE=:memory:

# Frontend Configuration
# Backend API URL for frontend (defaults to http://localhost:3000 if not set)
NEXT_PUBLIC_API_URL=http://localhost:3000

# Frontend App URL (used for OAuth redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3001

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
# Optional override for OAuth callback URL (defaults to NEXT_PUBLIC_APP_URL/auth/github/callback)
# GITHUB_REDIRECT_URI=http://localhost:3001/auth/github/callback
